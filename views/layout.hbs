                </form>

                <script>
                    function submitForm() {
                        var form = document.getElementById('searchForm');
                        var searchType = document.getElementById('searchType').value;

                        switch (searchType) {
                            case 'toy1':
                                form.action = '/toy/search';
                                break;
                            case 'toy2':
                                form.action = '/toy2/search';
                                break;
                            case 'toy3':
                                form.action = '/toy3/search';
                                break;
                            default:
                                form.action = '/default/search';
                        }

                        return true; // Return false to prevent the form from submitting normally
                    }
                </script>
